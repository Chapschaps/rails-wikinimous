<h1>Edit article</h1>

<%= form_for @article do |f| %>
 <p></p> <%= f.label :title %>
 <p></p> <%= f.text_field :title %>

 <p></p> <%= f.label :details %>
 <p></p> <%= f.text_field :details %>

 <p></p> <%= f.label :completed, "Is the article completed?" %>
 <p></p> <%= f.check_box :completed %>


<p></p>  <%= f.submit "Edit article" %>
<% end %>

<p><%= link_to "↩️ Back to list", articles_path %></p>
